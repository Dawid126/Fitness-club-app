<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root prefHeight="414.0" prefWidth="219.0" type="javafx.scene.layout.VBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.products.productDetails.ProductDetailsController">
   <children>
      <VBox fx:id="descriptionItems" alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Product Details" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Text fx:id="description" strokeType="OUTSIDE" strokeWidth="0.0" text="Description" />
               </children>
            </HBox>
            <VBox alignment="BOTTOM_CENTER" minWidth="-Infinity" prefHeight="218.0" prefWidth="219.0">
               <children>
                  <HBox alignment="BASELINE_CENTER" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#decreaseQuantity" text="-" />
                        <Text fx:id="quantity" strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity" />
                        <Button mnemonicParsing="false" onAction="#increaseQuantity" text="+" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="122.0" text="Remove" onAction="#deleteProduct">
                     <VBox.margin>
                        <Insets top="7.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="123.0" text="Edit">
                     <VBox.margin>
                        <Insets top="7.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</fx:root>
